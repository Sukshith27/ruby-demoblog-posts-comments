<h1>User List</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
        </tr>
    </thead>
    <% @users.each do |user| %>
        <tbody>
            <tr>
                <td><%= user.firstName %></td>
                <td><%= user.lastName %></td>
                <td><%= user.age %></td>
                <td><%= link_to "Create", new_user_path%></td>
                <td><%= link_to "Edit", edit_user_path(user)%></td>
                <td><%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure you want to delete" } %></td>
            </tr>
        </tbody>
    <% end %>
</table>
